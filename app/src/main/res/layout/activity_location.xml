<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.authentication.LoginActivity"
            tools:ignore="HardcodedText">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_temp_map"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_big"
                android:paddingTop="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_big"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Set delivery location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_body_regular" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_big"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Your location"
                    android:textAllCaps="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_caption" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:fontFamily="@font/manrope_medium"
                    android:paddingBottom="@dimen/padding_medium"
                    android:text="Service lane, Amrapali Dream Valley, Greater Noida, Uttar Pradesh, 201009, India"
                    android:textSize="@dimen/text_size_body_small" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="House/ Flat details"
                    android:textAllCaps="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_caption" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:fontFamily="@font/manrope_medium"
                    android:paddingBottom="@dimen/padding_medium"
                    android:textSize="@dimen/text_size_body_small" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="landmark"
                    android:textAllCaps="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_caption" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:fontFamily="@font/manrope_medium"
                    android:paddingBottom="@dimen/padding_medium"
                    android:textSize="@dimen/text_size_body_small" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="save as"
                    android:textAllCaps="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_caption" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:fontFamily="@font/manrope_medium"
                    android:hint="Home, Work, Alice's Place..."
                    android:paddingBottom="@dimen/padding_medium"
                    android:textSize="@dimen/text_size_body_small" />


                <TextView
                    android:id="@+id/tvContinueAuthActivity"
                    backgroundCompatTint="@{@color/trihk_green}"
                    scaleOnPress="@{true}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_bigger"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@drawable/curved_corner_rectangle_trihk_red"
                    android:drawableEnd="@drawable/ic_arrow_circle_right_solid_white"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="@dimen/padding_medium"
                    android:text="Continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_body_regular" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>