<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="header"
            type="com.trihkfoods.main.tempmodels.AccountOptionHeader" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_big"
        android:paddingTop="@dimen/padding_regular"
        android:paddingEnd="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_regular">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:text="@{header.title}"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_body_small" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/manrope_medium"
            android:text="@{header.subTitle}"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_caption" />

    </LinearLayout>
</layout>
