<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/trihk_red</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/trihk_red</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="GetStartedTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Authentication screen theme. -->
    <style name="BottomNavigationItemText">
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>


    <style name="AuthenticationActivityEditText">
        <item name="android:paddingBottom">@dimen/padding_regular</item>
        <item name="android:paddingTop">@dimen/padding_regular</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">@dimen/text_size_body_big</item>
        <item name="android:background">@drawable/border_bottom_gray_thick</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AutoTextBodyRegularToBodyBig">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_body_big</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_body_regular</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="AutoTextBodySmallToBodyRegular">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_body_regular</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_body_small</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>


    <style name="AutoTextBodyBigToTitleRegular">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_title_regular</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_body_big</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="AutoTextCaptionToBodySmall">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_body_small</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_caption</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="AutoTextSmallToCaption">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_caption</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_small</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="GetStartedPrimaryButtonAppearance" >
        <item name="android:drawablePadding">@dimen/padding_regular</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:paddingStart">@dimen/padding_big</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_big</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GetStartedTextSwitcherBodyText">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_bigger</item>
        <item name="android:paddingEnd">@dimen/padding_bigger</item>
        <item name="android:paddingBottom">@dimen/padding_regular</item>
        <item name="android:textColor">@color/white_80</item>
    </style>


    <style name="GetStartedTextSwitcherTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_body_regular</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_bigger</item>
        <item name="android:paddingEnd">@dimen/padding_bigger</item>
        <item name="android:paddingBottom">@dimen/padding_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="GetStartedTextSwitcherAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inAnimation">@anim/slide_in_right</item>
        <item name="android:outAnimation">@anim/slide_out_left</item>
    </style>

    <style name="BaseAppTitleTextAppearance" parent="AutoTextBodyBigToTitleRegular">
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:fontFamily">@font/manrope_extrabold</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseAppBodyTextAppearance" parent="AutoTextCaptionToBodySmall">
        <item name="android:layout_height">20dp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TrihkRedProgressBarTheme">
        <item name="colorAccent">@color/trihk_red</item>
    </style>


    <style name="RatingBarTheme">
        <item name="colorAccent">@color/trihk_yellow</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">@dimen/text_size_body_regular</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>


</resources>
