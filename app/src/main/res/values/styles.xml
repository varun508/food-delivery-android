<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/trihk_red</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/trihk_red</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="GetStartedTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Authentication screen theme. -->
    <style name="BottomNavigationItemText">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>


    <style name="AuthenticationActivityEditText">
        <item name="android:paddingBottom">@dimen/padding_regular</item>
        <item name="android:paddingTop">@dimen/padding_regular</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">@dimen/text_size_body_big</item>
        <item name="android:background">@drawable/border_bottom_gray_thick</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
