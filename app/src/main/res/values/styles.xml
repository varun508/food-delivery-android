<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/trihk_red</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/trihk_red</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="GetStartedTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!-- Authentication screen theme. -->
    <style name="AuthenticationTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
